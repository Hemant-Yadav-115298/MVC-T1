@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2>Create Category</h2>
			<hr />
		</div>
		<div class ="mb-3">
			<label asp-for="@Model.Name"></label>
			<input asp-for="@Model.Name" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.DisplayOrder"></label>
			<input asp-for="@Model.DisplayOrder" class="form-control" />
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
			</div>
		</div>
	</div>

</form>